/**
 * 全局样式
 */

page {
  font-family: -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, 'Helvetica Neue', Arial, sans-serif;
  font-size: 28rpx;
  color: #333;
  background-color: #f5f5f5;
  box-sizing: border-box;
}

/* 通用容器 */
.container {
  padding: 30rpx;
}

/* 按钮样式重置 */
button {
  margin: 0;
  padding: 0;
  border-radius: 0;
  background: transparent;
}

button::after {
  border: none;
}

/* 主按钮样式 */
.btn-primary {
  background-color: #5B7FFF;
  color: #fff;
  border-radius: 12rpx;
  font-size: 32rpx;
  padding: 24rpx 0;
  text-align: center;
}

.btn-primary[disabled] {
  background-color: #ccc;
  color: #999;
}

/* 输入框样式 */
.input {
  background-color: #fff;
  border: 1rpx solid #e0e0e0;
  border-radius: 12rpx;
  padding: 24rpx;
  font-size: 30rpx;
}

.input-placeholder {
  color: #999;
}

/* pages/sessions/sessions.wxss */

.sessions-container {
  min-height: 100vh;
  display: flex;
  flex-direction: column;
  background-color: #f5f5f5;
}

.header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 30rpx;
  background-color: #fff;
  border-bottom: 1rpx solid #eee;
}

.title {
  font-size: 36rpx;
  font-weight: bold;
  color: #333;
}

.new-btn {
  background-color: #5B7FFF;
  padding: 16rpx 32rpx;
  border-radius: 32rpx;
}

.new-btn-text {
  color: #fff;
  font-size: 28rpx;
}

.loading,
.empty {
  flex: 1;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 100rpx;
}

.empty-text {
  font-size: 32rpx;
  color: #999;
}

.empty-hint {
  font-size: 26rpx;
  color: #ccc;
  margin-top: 20rpx;
}

.session-list {
  flex: 1;
}

.session-item {
  display: flex;
  align-items: center;
  padding: 30rpx;
  background-color: #fff;
  border-bottom: 1rpx solid #f0f0f0;
}

.session-item:active {
  background-color: #f8f8f8;
}

.session-info {
  flex: 1;
  display: flex;
  flex-direction: column;
}

.session-title {
  font-size: 32rpx;
  color: #333;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}

.session-time {
  font-size: 24rpx;
  color: #999;
  margin-top: 10rpx;
}

.session-arrow {
  font-size: 32rpx;
  color: #ccc;
  margin-left: 20rpx;
}

.logout-section {
  padding: 30rpx;
  background-color: #fff;
  border-top: 1rpx solid #eee;
}

.logout-btn {
  background-color: #fff;
  color: #ff4d4f;
  font-size: 30rpx;
  border: 1rpx solid #ff4d4f;
  border-radius: 12rpx;
  padding: 20rpx 0;
}

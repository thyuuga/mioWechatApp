/* pages/login/login.wxss */

.login-container {
  min-height: 100vh;
  display: flex;
  flex-direction: column;
  padding: 100rpx 60rpx;
  background: linear-gradient(180deg, #5B7FFF 0%, #8B9FFF 100%);
}

.logo-section {
  display: flex;
  flex-direction: column;
  align-items: center;
  margin-bottom: 80rpx;
}

.logo {
  width: 160rpx;
  height: 160rpx;
  background-color: #fff;
  border-radius: 40rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 80rpx;
  color: #5B7FFF;
  font-weight: bold;
  box-shadow: 0 8rpx 32rpx rgba(0, 0, 0, 0.1);
}

.app-name {
  margin-top: 30rpx;
  font-size: 48rpx;
  color: #fff;
  font-weight: bold;
}

.form-section {
  background-color: #fff;
  border-radius: 24rpx;
  padding: 50rpx 40rpx;
  box-shadow: 0 8rpx 32rpx rgba(0, 0, 0, 0.1);
}

.form-item {
  margin-bottom: 30rpx;
}

.form-item .input {
  background-color: #f8f8f8;
  border: none;
  border-radius: 16rpx;
  padding: 28rpx 32rpx;
  font-size: 32rpx;
}

.login-btn {
  margin-top: 20rpx;
  height: 96rpx;
  line-height: 96rpx;
  padding: 0;
  border-radius: 16rpx;
  font-weight: bold;
}

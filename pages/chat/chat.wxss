/* pages/chat/chat.wxss */

.chat-container {
  height: 100vh;
  display: flex;
  flex-direction: column;
  background-color: #f5f5f5;
}

/* 额度信息 */
.usage-bar {
  display: flex;
  justify-content: space-between;
  padding: 16rpx 30rpx;
  background-color: #e8f4fd;
  border-bottom: 1rpx solid #d0e8f7;
}

.usage-text {
  font-size: 24rpx;
  color: #666;
}

.usage-remaining {
  font-size: 24rpx;
  color: #5B7FFF;
  font-weight: bold;
}

/* 消息列表 */
.message-list {
  flex: 1;
  overflow: hidden;
}

.message-wrapper {
  padding: 20rpx 30rpx;
  padding-bottom: 30rpx;
}

.empty-chat {
  display: flex;
  justify-content: center;
  align-items: center;
  padding: 100rpx;
}

.empty-chat-text {
  color: #999;
  font-size: 28rpx;
}

/* 消息项 */
.message-item {
  display: flex;
  margin-bottom: 30rpx;
}

.message-user {
  flex-direction: row-reverse;
}

.message-avatar {
  width: 72rpx;
  height: 72rpx;
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 28rpx;
  font-weight: bold;
  flex-shrink: 0;
}

.message-user .message-avatar {
  background-color: #5B7FFF;
  color: #fff;
}

.message-assistant .message-avatar {
  background-color: #fff;
  color: #5B7FFF;
  border: 2rpx solid #5B7FFF;
}

.avatar-image {
  width: 100%;
  height: 100%;
  border-radius: 50%;
}

.message-content {
  max-width: 70%;
  padding: 24rpx 28rpx;
  border-radius: 20rpx;
  margin: 0 20rpx;
}

.message-user .message-content {
  background-color: #5B7FFF;
  border-top-right-radius: 4rpx;
}

.message-assistant .message-content {
  background-color: #fff;
  border-top-left-radius: 4rpx;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.05);
}

.message-text {
  font-size: 30rpx;
  line-height: 1.6;
  word-break: break-word;
}

.message-user .message-text {
  color: #fff;
}

.message-assistant .message-text {
  color: #333;
}

.loading-dots {
  color: #999;
}

/* 输入区域 */
.input-area {
  background-color: #fff;
  padding: 20rpx 30rpx;
  padding-bottom: calc(20rpx + env(safe-area-inset-bottom));
  border-top: 1rpx solid #eee;
}

.input-wrapper {
  display: flex;
  align-items: center;
}

.message-input {
  flex: 1;
  background-color: #f5f5f5;
  border-radius: 40rpx;
  padding: 20rpx 32rpx;
  font-size: 30rpx;
}

.send-btn {
  margin-left: 20rpx;
  background-color: #5B7FFF;
  color: #fff;
  font-size: 28rpx;
  padding: 20rpx 40rpx;
  border-radius: 40rpx;
  line-height: 1;
}

.send-btn-disabled {
  background-color: #ccc;
  color: #999;
}
